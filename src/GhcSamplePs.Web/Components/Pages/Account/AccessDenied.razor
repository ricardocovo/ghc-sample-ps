@page "/Account/AccessDenied"

<PageTitle>Access Denied</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">
    <MudPaper Elevation="3" Class="pa-8">
        <MudStack AlignItems="AlignItems.Center" Spacing="4">
            <MudIcon Icon="@Icons.Material.Filled.Lock" Size="Size.Large" Color="Color.Error" />
            <MudText Typo="Typo.h4" Color="Color.Error">Access Denied</MudText>
            <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-4">
                You do not have permission to access this resource. 
                If you believe this is an error, please contact your administrator.
            </MudText>
            <MudButton Href="/" Variant="Variant.Filled" Color="Color.Primary">
                <MudIcon Icon="@Icons.Material.Filled.Home" Class="mr-2" />
                Return to Home
            </MudButton>
        </MudStack>
    </MudPaper>
</MudContainer>
