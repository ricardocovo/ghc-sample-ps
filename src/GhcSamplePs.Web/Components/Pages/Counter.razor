@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>
        
        <MudText Typo="Typo.h5" role="status">Current count: @currentCount</MudText>
        
        <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="IncrementCount" Class="mt-4">Click me</MudButton>
    </MudCardContent>
</MudCard>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
