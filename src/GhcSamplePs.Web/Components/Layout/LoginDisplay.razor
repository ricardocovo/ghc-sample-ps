@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>
        <MudMenu Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
            <ChildContent>
                <MudMenuItem Disabled="true">
                    <MudText Typo="Typo.body2">@context.User.Identity?.Name</MudText>
                </MudMenuItem>
                <MudDivider />
                <MudMenuItem OnClick="SignOut">
                    <MudIcon Icon="@Icons.Material.Filled.Logout" Class="mr-2" Size="Size.Small" />
                    Sign out
                </MudMenuItem>
            </ChildContent>
        </MudMenu>
    </Authorized>
    <NotAuthorized>
        <MudButton OnClick="SignIn" Variant="Variant.Text" Color="Color.Inherit">
            <MudIcon Icon="@Icons.Material.Filled.Login" Class="mr-2" />
            Sign in
        </MudButton>
    </NotAuthorized>
</AuthorizeView>

@code {
    private void SignIn()
    {
        NavigationManager.NavigateTo("MicrosoftIdentity/Account/SignIn", forceLoad: true);
    }

    private void SignOut()
    {
        NavigationManager.NavigateTo("MicrosoftIdentity/Account/SignOut", forceLoad: true);
    }
}
